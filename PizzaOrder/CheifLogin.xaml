<Window x:Class="PizzaOrder.CheifLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaOrder"
        mc:Ignorable="d"
        Title="CheifLogin" Height="304" Width="484" HorizontalAlignment="Center" VerticalAlignment="Center"
        WindowStartupLocation="CenterScreen"
>
    <Grid Height="318" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="255*"/>
            <ColumnDefinition Width="229*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button1" Content="Login" HorizontalAlignment="Left" Height="50" Margin="213,358,0,0" VerticalAlignment="Top" Width="179" Background="#FFCB421C" Foreground="White" BorderBrush="{x:Null}" FontFamily="Trebuchet MS" FontSize="22" Grid.Column="1"/>
        <Image HorizontalAlignment="Left" Height="318" VerticalAlignment="Center" Width="459" Source="/adea9qoi.png" Margin="144,0,0,0" Opacity="0.4" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5"/>
        <DockPanel HorizontalAlignment="Left" Height="318" LastChildFill="False" VerticalAlignment="Center" Width="183" Background="#FFCB421C"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="140" Width="163" FontWeight="Bold" FontFamily="Arial Black" FontSize="40" RenderTransformOrigin="0.822,0.529" TextDecorations="Underline" Text="YUMM YUMM PIZZA">
            <TextBlock.Foreground>
                <SolidColorBrush Color="#FFFFFFE1" Opacity="0.7"/>
            </TextBlock.Foreground>
            <TextBlock.Background>
                <ImageBrush/>
            </TextBlock.Background></TextBlock>
        <Label Content="Cheif Login Page" HorizontalAlignment="Left" Height="40" Margin="193,10,0,0" VerticalAlignment="Top" Width="268" Foreground="#FFFFFFE1" FontSize="28" FontFamily="Arial Black" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="148" Width="162" Foreground="#FF2E1B16" FontWeight="Bold" FontFamily="Arial Black" FontSize="40" RenderTransformOrigin="0.822,0.529" TextDecorations="Underline" Text="YUMM YUMM PIZZA">
            <TextBlock.Background>
                <ImageBrush/>
            </TextBlock.Background></TextBlock>
        <Image Margin="10,118,94,38" Source="/OIP-removebg-preview (2).png" Stretch="Fill"/>
        <Label Content="Chief Login Page" HorizontalAlignment="Left" Height="41" Margin="194,10,0,0" VerticalAlignment="Top" Width="267" Foreground="#FFCB421C" FontSize="28" FontFamily="Arial Black" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <Label Content="Chief ID :" HorizontalAlignment="Left" Height="38" Margin="194,69,0,0" VerticalAlignment="Top" Width="127" FontSize="18" FontFamily="Arial" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <TextBox x:Name="cheifTb_1" HorizontalAlignment="Left" Height="27" Margin="194,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Grid.ColumnSpan="2"/>
        <TextBox x:Name="cheifpassTb_1" HorizontalAlignment="Left" Height="32" Margin="194,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Grid.ColumnSpan="2" TextChanged="cheifpassTb_1_TextChanged"/>
        <Label Content="Password :" HorizontalAlignment="Left" Height="38" Margin="194,0,0,0" VerticalAlignment="Center" Width="127" FontSize="18" FontFamily="Arial" FontWeight="Bold" RenderTransformOrigin="0.616,0.533" Grid.ColumnSpan="2"/>
        <Button Content="Login" HorizontalAlignment="Left" Height="34" Margin="201,212,0,0" VerticalAlignment="Top" Width="78" Background="#FFCB421C" Foreground="White" FontFamily="Trebuchet MS" FontSize="16" Click="Button_Click" Grid.ColumnSpan="2"/>
        <Button Content="Back" HorizontalAlignment="Left" Height="34" Margin="39,212,0,0" VerticalAlignment="Top" Width="70" Background="#FFCB421C" Foreground="White" FontSize="14" FontFamily="Trebuchet MS" Click="Button_Click_1" Grid.Column="1"/>
    </Grid>
</Window>
