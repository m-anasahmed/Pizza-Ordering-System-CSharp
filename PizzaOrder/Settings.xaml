<Window x:Class="PizzaOrder.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaOrder"
        mc:Ignorable="d"
        Title="Settings" Height="467.7" Width="839"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,1">
        <Image Margin="0,0,0,-3" Source="/adea9qoi.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Opacity="0.4">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.208"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <ComboBox x:Name="combobox1" HorizontalAlignment="Left" Height="41" Margin="233,165,0,0" VerticalAlignment="Top" Width="412">
            <ListViewItem Content="Extra Large" FontSize="14"/>
            <ListViewItem Content="Large" FontSize="14"/>
            <ListViewItem Content="Medium" FontSize="14"/>
            <ListViewItem Content="Small" FontSize="14"/>
        </ComboBox>
        <Label Content="Enter price :" HorizontalAlignment="Left" Height="29" Margin="228,0,0,0" VerticalAlignment="Center" Width="140" Foreground="#FFCB421C" FontSize="18" FontFamily="Trebuchet MS" FontWeight="Bold"/>
        <Label Content="Select Pizza :" HorizontalAlignment="Left" Height="35" Margin="232,130,0,0" VerticalAlignment="Top" Width="132" Foreground="#FFCB421C" FontSize="18" FontFamily="Trebuchet MS" FontWeight="Bold"/>
        <TextBox x:Name="textBox4" HorizontalAlignment="Left" Height="37" Margin="233,240,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="412" FontSize="16" FontFamily="Trebuchet MS" RenderTransformOrigin="1.117,3.428"/>
        <Button x:Name="button5" Content="Submit" HorizontalAlignment="Left" Margin="346,305,0,86" Width="186" Background="#FFCB421C" Foreground="White" BorderBrush="{x:Null}" FontFamily="Trebuchet MS" FontSize="18" RenderTransformOrigin="0.5,0.5" Click="button5_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="button6" Content="Back" HorizontalAlignment="Left" Height="34" Margin="386,383,0,0" VerticalAlignment="Top" Width="106" Background="#FFCB421C" Foreground="White" BorderBrush="{x:Null}" FontFamily="Trebuchet MS" FontSize="14" RenderTransformOrigin="0.5,0.5" Click="button6_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <DockPanel HorizontalAlignment="Left" Height="450" LastChildFill="False" VerticalAlignment="Center" Width="109" Background="#FFCB421C"/>
        <Label Content="PIZZA ORDER SYSTEM " HorizontalAlignment="Left" Height="48" Margin="259,31,0,0" VerticalAlignment="Top" Width="386" Foreground="#FFCB421C" FontSize="30" FontFamily="Arial Black" FontWeight="Bold"/>
        <Label Content="PRICE SETTING" HorizontalAlignment="Left" Height="54" Margin="318,63,0,0" VerticalAlignment="Top" Width="268" Foreground="#FFCB421C" FontSize="30" FontFamily="Arial Black" FontWeight="Bold"/>
    </Grid>
</Window>
